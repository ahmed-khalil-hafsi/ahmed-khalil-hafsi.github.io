<div class="process-diagram-container">
  <h3 class="process-diagram-title">{Astro.props.title}</h3>
  {Astro.props.description && <p class="process-diagram-description">{Astro.props.description}</p>}
  
  <div class="process-steps">
    <slot />
  </div>
  
  {Astro.props.source && <div class="process-diagram-source">Source: {Astro.props.source}</div>}
</div>

<style>
  .process-diagram-container {
    background-color: var(--white);
    border-radius: var(--radius-md);
    box-shadow: var(--shadow-md);
    padding: var(--space-lg);
    margin-bottom: var(--space-xl);
  }
  
  .process-diagram-title {
    color: var(--primary);
    margin-bottom: var(--space-sm);
    text-align: center;
  }
  
  .process-diagram-description {
    color: var(--neutral);
    font-style: italic;
    text-align: center;
    margin-bottom: var(--space-lg);
  }
  
  .process-steps {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
  
  .process-diagram-source {
    font-size: 0.8rem;
    color: var(--neutral);
    text-align: right;
    margin-top: var(--space-md);
    font-style: italic;
  }
  
  @media (min-width: 768px) {
    .process-steps {
      flex-direction: row;
      flex-wrap: wrap;
      justify-content: space-between;
    }
  }
</style>
