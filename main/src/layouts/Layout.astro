			<slot />
		</main>
		<footer class="py-8 px-4 mt-12 bg-dark border-t border-gray-800">
			<div class="max-w-6xl mx-auto">
				<div class="flex flex-col md:flex-row justify-between items-center gap-4">
					<p class="text-sm text-gray-400">Â© 2025 Ahmed K. Hafsi. All Rights Reserved.</p>
					<div class="flex gap-4">
						<a href="https://negotiations.substack.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">Substack</a>
						<a href="https://linkedin.com/in/ahmedkhalilhafsi" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">LinkedIn</a>
					</div>
				</div>
			</div>
		</footer>
		
		<!-- Structured Data for SEO -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Ahmed K. Hafsi",
				"url": "https://ahmedhafsi.com",
				"sameAs": [
					"https://negotiations.substack.com",
					"https://linkedin.com/in/ahmedkhalilhafsi"
				],
				"jobTitle": "Negotiation Strategist",
				"worksFor": {
					"@type": "Organization",
					"name": "Infineon"
				},
				"description": "Expert in game theory and negotiation strategy with over a decade of experience."
			}
		</script>
		
		<script>
			// Mobile menu toggle
			document.addEventListener('DOMContentLoaded', () => {
				const menuBtn = document.getElementById('menuBtn');
				const mobileNav = document.getElementById('mobileNav');
				
				if (menuBtn && mobileNav) {
					menuBtn.addEventListener('click', () => {
						mobileNav.classList.toggle('hidden');
					});
				} else {
					if (!menuBtn) console.error("Mobile menu button ('menuBtn') not found.");
					if (!mobileNav) console.error("Mobile navigation container ('mobileNav') not found.");
				}
				
				// Services dropdown logic
				const servicesGroup = document.querySelector('.group'); // The <li> element
				const servicesDropdownBtn = servicesGroup?.querySelector('button'); // The <button> inside the li
				const servicesDropdown = servicesGroup?.querySelector('.absolute'); // The dropdown div
				
				// Handle mobile dropdown click
				if (servicesGroup && servicesDropdownBtn) {
					servicesDropdownBtn.addEventListener('click', (e) => {
						// Only apply click logic for mobile view
						if (window.innerWidth < 768) {
							e.preventDefault(); // Prevent any default button behavior
							// Toggle the 'active' class on the parent <li> (.group)
							// The CSS will handle showing/hiding the dropdown based on this class
							servicesGroup.classList.toggle('active');
						}
					});
				} else {
					if (!servicesGroup) console.error("Services group element ('.group') not found.");
					if (!servicesDropdownBtn) console.error("Services dropdown button not found within .group.");
				}
				
				// Add hover intent for desktop view
				if (window.innerWidth >= 768 && servicesGroup && servicesDropdown) {
					let timeout;
					
					servicesGroup.addEventListener('mouseenter', () => {
						clearTimeout(timeout);
						// Ensure 'active' class is removed if lingering from mobile
						servicesGroup.classList.remove('active');
						// Use Tailwind's 'hidden' class for desktop hover control
						servicesDropdown.classList.remove('hidden');
					});
					
					servicesGroup.addEventListener('mouseleave', () => {
						timeout = setTimeout(() => {
							servicesDropdown.classList.add('hidden');
						}, 200); // Delay before hiding
					});
					
					// Keep dropdown open if hovering over it directly
					servicesDropdown.addEventListener('mouseenter', () => {
						clearTimeout(timeout);
					});
					
					servicesDropdown.addEventListener('mouseleave', () => {
						timeout = setTimeout(() => {
							servicesDropdown.classList.add('hidden');
						}, 200);
					});
				}
			});
		</script>
	</body>
</html>

<style is:global>
	html {
		font-family: 'Inter', sans-serif;
		font-size: 16px;
		-webkit-text-size-adjust: 100%;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Source Serif Pro', serif;
	}
	
	@media (max-width: 640px) {
		html {
			font-size: 14px;
		}
	}
	
	/* Improve touch targets on mobile */
	@media (max-width: 640px) {
		button, 
		[role="button"],
		a.button,
		input[type="submit"] {
			min-height: 44px;
			padding: 0.5rem 1rem;
		}
	}
	
	/* Dropdown styles */
	.group:hover .absolute {
		display: block;
	}
	
	.group .absolute {
		background-color: #3D2B56; /* Card color from your Tailwind config */
	}
	
	.group .absolute::before {
		content: '';
		position: absolute;
		top: -10px;
		left: 0;
		right: 0;
		height: 10px;
	}
	
	@media (max-width: 768px) {
		.group:hover .absolute,
		.group.active .absolute {
			position: static;
			display: block;
			width: 100%;
			margin-top: 0;
			border: none;
			box-shadow: none;
			background: #3D2B56; /* Card color from your Tailwind config */
		}
		.group:hover .absolute a,
		.group.active .absolute a {
			padding-left: 1.5rem;
			background-color: #3D2B56; /* Card color from your Tailwind config */
		}
		
		.group.active .absolute {
			display: block;
		}
	}

