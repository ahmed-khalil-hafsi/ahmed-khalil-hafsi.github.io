---
interface Props {
	title?: string;
}

const { title = "Ahmed K. Hafsi - Negotiation Strategist" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:wght@400;600;700&family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
		
		<!-- SEO Meta Tags -->
		<meta name="description" content="Ahmed K. Hafsi - Expert in game theory and negotiation strategy with over a decade of experience in global procurement and sales negotiations." />
		<meta name="keywords" content="game theory, negotiation, strategic advisory, procurement, behavioral economics, Ahmed Hafsi" />
		
		<!-- Open Graph / Social Media Meta Tags -->
		<meta property="og:type" content="website" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content="Expert insights on game theory and negotiation strategy" />
		<meta property="og:image" content="/og-image.jpg" />
		<meta property="og:url" content="https://yourdomain.com" />
		<meta name="twitter:card" content="summary_large_image" />
	</head>
	<body class="bg-dark text-white font-sans min-h-screen flex flex-col">
		<header class="w-full py-6 px-4 md:px-8 bg-dark border-b border-gray-800">
			<div class="max-w-6xl mx-auto flex items-center justify-between">
				<a href="/" class="text-xl font-bold text-white hover:text-accent transition-colors">
					Ahmed K. Hafsi
				</a>
				<nav>
					<ul class="flex gap-6">
						<li><a href="/" class="text-gray-300 hover:text-white transition-colors">Home</a></li>
						<li><a href="/services" class="text-gray-300 hover:text-white transition-colors">Services</a></li>
						<li><a href="/newsletter" class="text-gray-300 hover:text-white transition-colors">Games & Negotiations</a></li>
						<li><a href="/about" class="text-gray-300 hover:text-white transition-colors">About</a></li>
						<li><a href="/contact" class="text-gray-300 hover:text-white transition-colors">Contact</a></li>
					</ul>
				</nav>
			</div>
		</header>
		<main class="flex-grow max-w-6xl mx-auto w-full p-4 md:p-8">
			<slot />
		</main>
		<footer class="py-8 px-4 mt-12 bg-dark border-t border-gray-800">
			<div class="max-w-6xl mx-auto">
				<div class="flex flex-col md:flex-row justify-between items-center gap-4">
					<p class="text-sm text-gray-400">Â© 2025 Ahmed K. Hafsi. All Rights Reserved.</p>
					<div class="flex gap-4">
						<a href="https://negotiations.substack.com" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">Substack</a>
						<a href="https://linkedin.com/in/ahmedkhalilhafsi" target="_blank" rel="noopener" class="text-gray-400 hover:text-white transition-colors">LinkedIn</a>
					</div>
				</div>
			</div>
		</footer>
		
		<!-- Structured Data for SEO -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "Person",
				"name": "Ahmed K. Hafsi",
				"url": "https://ahmedhafsi.com,
				"sameAs": [
					"https://negotiations.substack.com",
					"https://linkedin.com/in/ahmedkhalilhafsi"
				],
				"jobTitle": "Negotiation Strategist",
				"worksFor": {
					"@type": "Organization",
					"name": "Infineon"
				},
				"description": "Expert in game theory and negotiation strategy with over a decade of experience."
			}
		</script>
		<script>
			// Initialize AOS
			document.addEventListener('DOMContentLoaded', () => {
				AOS.init({
					duration: 800,
					easing: 'ease-out',
					once: true
				});
			});
		</script>
	</body>
</html>

<style is:global>
	html {
		font-family: 'Inter', sans-serif;
	}
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
	h1, h2, h3, h4, h5, h6 {
		font-family: 'Source Serif Pro', serif;
	}
</style>
