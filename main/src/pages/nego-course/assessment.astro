   <section id="assessment-questionnaire" class="bg-white p-6 md:p-8 rounded-lg shadow-sm border border-gray-200 scroll-mt-20"> {/* scroll-mt adds offset for fixed header */}
      <h2 class="text-2xl font-serif font-semibold text-gray-800 mb-6">Negotiator Style Assessment</h2>
      <p class="text-gray-600 mb-2">For each statement, select the option that best describes your typical behavior.</p>
      <p class="text-sm text-gray-500 mb-8"><strong>Scale:</strong> 1=Never | 2=Rarely | 3=Sometimes | 4=Often | 5=Always</p>

      <form id="negotiation-style-form" class="space-y-8">
          {/* Group questions for structure if desired */}
          {[
            { q: 1, text: "I try to avoid situations where conflict might arise." },
            { q: 2, text: "I stand firm on my position when I believe I'm right." },
            { q: 3, text: "I look for creative solutions that satisfy both parties' interests." },
            { q: 4, text: "I'm willing to give up some of my goals to maintain relationships." },
            { q: 5, text: "I seek middle ground to resolve disagreements." },
            { q: 6, text: "I express my views directly and clearly." },
            { q: 7, text: "I listen carefully to understand others' perspectives." },
            { q: 8, text: "I avoid discussing sensitive issues that might cause disagreement." },
            // Add remaining questions (9-30) here following the same pattern
            // ...
             { q: 9, text: "I'm comfortable with silence and pauses in negotiations." },
             { q: 10, text: "I ask probing questions to understand underlying interests." },
             // ... up to 30 questions
          ].slice(0, 10).map(item => ( // Showing first 10 for brevity
            <div class="question-item border-b border-gray-200 pb-4">
               <p class="question mb-3 text-gray-700 font-medium">{item.q}. {item.text}</p>
               {/* Improved Radio Buttons */}
               <div class="rating-scale flex flex-wrap gap-x-4 gap-y-2">
                  {[1, 2, 3, 4, 5].map(val => (
                    <label class="flex items-center gap-2 cursor-pointer text-sm text-gray-600 hover:text-gray-900">
                      <input type="radio" name={`q${item.q}`} value={val} required
                             class="form-radio h-4 w-4 text-purple-600 border-gray-300 focus:ring-purple-500">
                      <span>{val}</span>
                    </label>
                  ))}
               </div>
            </div>
          ))}

          {/* Submit Button */}
          <div class="pt-6 text-center">
              <button type="submit" class="btn btn-primary">Calculate My Style</button>
          </div>
      </form>
   </section>

   {/* Results Section (Hidden Initially) */}
   <section id="results-section" class="bg-white p-6 md:p-8 rounded-lg shadow-sm border border-gray-200 scroll-mt-20" style="display: none;">
      <h2 class="text-2xl font-serif font-semibold text-gray-800 mb-8">Your Negotiation Style Profile</h2>

      {/* Chart Placeholder */}
       <div class="mb-8 text-center">
         <div class="bg-gray-100 p-6 rounded-md border border-gray-200 inline-block">
           <i class="fas fa-chart-bar text-5xl text-gray-400 mb-3"></i>
