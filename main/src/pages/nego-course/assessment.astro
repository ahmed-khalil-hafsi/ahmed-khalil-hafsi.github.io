           {/* Placeholder for style scores */}
           <div id="style-scores" class="mt-4 text-xs text-gray-500"></div>
         </div>
       </div>

      {/* Style Descriptions */}
       <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
           <div class="primary-style">
             <h3 class="text-xl font-serif font-semibold text-purple-700 mb-3">Primary Style: <span id="primary-style" class="text-gray-800">--</span></h3>
             <p id="primary-style-description" class="text-gray-600 text-sm">Description of primary style...</p>
           </div>
           <div class="secondary-style">
             <h3 class="text-xl font-serif font-semibold text-purple-700 mb-3">Secondary Style: <span id="secondary-style" class="text-gray-800">--</span></h3>
             <p id="secondary-style-description" class="text-gray-600 text-sm">Description of secondary style...</p>
           </div>
       </div>

        {/* Strengths & Challenges */}
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-8">
           <div>
               <h3 class="text-lg font-serif font-semibold text-gray-700 mb-3">Strengths</h3>
               <ul id="strengths-list" class="list-disc list-inside space-y-1 text-sm text-gray-600"><li>Strength 1...</li><li>Strength 2...</li></ul>
           </div>
            <div>
                <h3 class="text-lg font-serif font-semibold text-gray-700 mb-3">Potential Challenges</h3>
                <ul id="challenges-list" class="list-disc list-inside space-y-1 text-sm text-gray-600"><li>Challenge 1...</li><li>Challenge 2...</li></ul>
            </div>
        </div>

         {/* Adaptation & Development */}
          <div class="mb-8">
              <h3 class="text-lg font-serif font-semibold text-gray-700 mb-3">Adaptation Strategies</h3>
              <p id="adaptation-strategies" class="text-sm text-gray-600">Adaptation advice based on styles...</p>
          </div>
          <div>
              <h3 class="text-lg font-serif font-semibold text-gray-700 mb-3">Development Plan</h3>
              <p id="development-recommendations" class="text-sm text-gray-600 mb-3">Development areas based on profile...</p>
              <h4 class="text-sm font-medium text-gray-700 mb-2">Suggested Actions:</h4>
              <ul id="development-actions" class="list-disc list-inside space-y-1 text-sm text-gray-600"><li>Action 1...</li><li>Action 2...</li></ul>
          </div>

          {/* Save/Print Buttons */}
           <div class="mt-10 pt-6 border-t border-gray-200 text-center space-x-4">
             <button class="btn btn-secondary" id="save-results">Save Results (PDF)</button>
             <button class="btn btn-outline" id="print-results">Print Results</button>
           </div>
   </section>

    {/* Interaction Section */}
    <section class="bg-white p-6 md:p-8 rounded-lg shadow-sm border border-gray-200">
        <h2 class="text-2xl font-serif font-semibold text-gray-800 mb-6">Negotiating with Different Styles</h2>
         <p class="text-gray-600 mb-8">Understanding style interactions helps you adapt:</p>
        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
          {[
            { title: 'Meeting a Competing Style', chars: 'Direct, assertive, focus on own goals', strats: 'Be direct, use objective criteria, don\'t yield to pressure, focus on problem-solving' },
            { title: 'Meeting an Accommodating Style', chars: 'Focus on relationship, yields easily', strats: 'Build rapport, appreciate flexibility, help them articulate interests, don\'t exploit' },
            { title: 'Meeting an Avoiding Style', chars: 'Reluctant to engage, postpones', strats: 'Create safe environment, use indirect methods initially, break down issues, be patient' },
            { title: 'Meeting a Collaborating Style', chars: 'Seeks understanding, creative, shares info', strats: 'Engage thoroughly, share interests, bring ideas, allow time' },
            { title: 'Meeting a Compromising Style', chars: 'Seeks middle ground, pragmatic', strats: 'Create value before compromising, use objective criteria, have fallbacks' },
          ].map(item => (
             <div class="bg-gray-50 p-5 rounded-md border border-gray-200 flex flex-col">
               <h3 class="text-lg font-serif font-semibold text-purple-700 mb-3">{item.title}</h3>
               <div class="text-sm text-gray-600 space-y-3">
                 <p><strong class="font-medium text-gray-700">Characteristics:</strong> {item.chars}</p>
                 <p><strong class="font-medium text-gray-700">Strategies:</strong> {item.strats}</p>
               </div>
             </div>
          ))}
        </div>
         <div class="prose max-w-none text-gray-600 mt-8">
           <h3 class="text-lg font-serif font-semibold text-gray-700 mb-3">Becoming Style-Flexible</h3>
           <p>Adapt based on context: high stakes (collaborate), time pressure (compromise), power imbalance (prepare more), culture (research!), high emotion (avoid temporarily).</p>
         </div>
    </section>

   {/* Conclusion/Navigation */}
   <section class="text-center mt-12">
     <div class="flex flex-wrap justify-between gap-4">
       <a href="/nego-course/cultural-aspects" class="btn btn-secondary">← Previous Module</a>
       {/* Link to next logical step, maybe course overview or a final summary */}
       <a href="/nego-course" class="btn btn-primary">Return to Course Overview →</a>
     </div>
   </section>

</div>

{/* Keep the inline script, ensure it targets updated elements if necessary */}
<script is:inline>
  document.addEventListener('DOMContentLoaded', function() {
    const form = document.getElementById('negotiation-style-form');
    const resultsSection = document.getElementById('results-section'); // Use ID selector

    // Placeholder data for results population
    const styleData = {
      Competing: { score: 0, desc: "Focuses on own goals, assertive.", strengths: ["Decisive", "Assertive"], challenges: ["Relationship strain", "Missed value"], adaptation: "Use for quick decisions or unimportant relationships.", development: ["Active listening", "Empathy"] },
      Accommodating: { score: 0, desc: "Prioritizes relationships.", strengths: ["Builds rapport", "Flexible"], challenges: ["Sacrifices interests", "Can be exploited"], adaptation: "Use when issue is more important to other party.", development: ["Assertiveness", "Setting boundaries"] },
      Avoiding: { score: 0, desc: "Postpones or sidesteps conflict.", strengths: ["Reduces tension", "Buys time"], challenges: ["Unresolved issues", "Frustration"], adaptation: "Use for trivial issues or high emotions.", development: ["Conflict engagement skills", "Assertiveness"] },
      Collaborating: { score: 0, desc: "Seeks win-win solutions.", strengths: ["Creative solutions", "Builds strong relationships"], challenges: ["Time-consuming", "Requires trust"], adaptation: "Use for complex issues where relationship matters.", development: ["Time management", "Patience"] },
      Compromising: { score: 0, desc: "Finds middle ground.", strengths: ["Efficient", "Fair-minded"], challenges: ["Suboptimal outcomes", "Focus on positions"], adaptation: "Use when time is limited or goals moderately important.", development: ["Value creation before compromising", "Interest-based negotiation"] },
    };

    if (form && resultsSection) {
      form.addEventListener('submit', function(e) {
        e.preventDefault();

        // Basic validation: Check if all questions are answered
        const totalQuestions = form.querySelectorAll('.question-item').length; // Adjust if needed
        const formData = new FormData(form);
        let answeredCount = 0;
        for (let pair of formData.entries()) {
             // Check if key starts with 'q' and value is present
            if (pair[0].startsWith('q') && pair[1]) {
                answeredCount++;
            }
        }
        // Rough check - update if more questions are added
        if (answeredCount < 10) {
            alert('Please answer all questions before submitting.');
            return;
        }


        // --- Scoring Logic Placeholder ---
        // In a real app, calculate scores based on which questions map to which styles.
        // Example: Q1, Q8 -> Avoiding; Q2, Q6 -> Competing, etc.
        // Assign random-ish scores for demonstration:
        Object.keys(styleData).forEach(key => {
            styleData[key].score = Math.floor(Math.random() * 20) + 5; // Random score between 5-24
        });
        // --- End Placeholder ---

        // Determine primary and secondary styles
        const sortedStyles = Object.entries(styleData).sort(([,a], [,b]) => b.score - a.score);
        const primaryStyle = sortedStyles[0][0];
        const secondaryStyle = sortedStyles[1][0];

        // Populate results section
        document.getElementById('primary-style').textContent = primaryStyle;
        document.getElementById('primary-style-description').textContent = styleData[primaryStyle].desc;
        document.getElementById('secondary-style').textContent = secondaryStyle;
        document.getElementById('secondary-style-description').textContent = styleData[secondaryStyle].desc;

        // Populate strengths/challenges/etc. based on primary style
        document.getElementById('strengths-list').innerHTML = styleData[primaryStyle].strengths.map(s => `<li>${s}</li>`).join('');
        document.getElementById('challenges-list').innerHTML = styleData[primaryStyle].challenges.map(c => `<li>${c}</li>`).join('');
        document.getElementById('adaptation-strategies').textContent = styleData[primaryStyle].adaptation;
        document.getElementById('development-recommendations').textContent = `Focus on: ${styleData[primaryStyle].development.join(', ')}`;
        document.getElementById('development-actions').innerHTML = styleData[primaryStyle].development.map(d => `<li>Practice ${d.toLowerCase()} techniques.</li>`).join('');

        // Populate scores placeholder
        document.getElementById('style-scores').innerHTML = sortedStyles.map(([name, data]) => `${name}: ${data.score}`).join('<br>');


        // Show results and scroll
        resultsSection.style.display = 'block';
        resultsSection.scrollIntoView({ behavior: 'smooth', block: 'start' });
      });
    }

    // Placeholder for Save/Print
    const saveBtn = document.getElementById('save-results');
    const printBtn = document.getElementById('print-results');
    if(saveBtn) saveBtn.addEventListener('click', () => alert('Save functionality not implemented yet.'));
    if(printBtn) printBtn.addEventListener('click', () => window.print());

  });
</script>